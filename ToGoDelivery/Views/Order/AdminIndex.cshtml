@model IEnumerable<ToGoDelivery.Models.Order.OrderListItem>
@{
    ViewBag.Title = "AdminIndex";
}
<div class="jumbotron" style="background-color:white">
    <h2 style="font-weight:bolder">Orders</h2>
    @*<div>
            @Html.ActionLink("Create New Order", "Create")
        </div>*@

    @if (TempData.ContainsKey("SaveResult"))
    {
        <div class="alert alert-success fade in" role="alert">
            <button type="button" class="close" data-dismiss="alert">
                <span>&times;</span>
            </button>
            @TempData["SaveResult"]
        </div>
    }

    <div>
        <table class="table table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DateCreated)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.OrderId)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Customer.Email)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.FinalTotalCost)
                </th>
                <th></th>
            </tr>
            @foreach (var order in Model)
            {
                //if (order.IsActive)
                //{
                <tr>
                    <td>
                        @Html.DisplayFor(r => order.DateCreated)
                    </td>
                    <td>
                        @Html.DisplayFor(r => order.OrderId)
                    </td>
                    <td>
                        @Html.DisplayFor(r => order.Customer.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(r => order.FinalTotalCost)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = order.OrderId }) |
                        @Html.ActionLink("Details", "Details", new { id = order.OrderId }) |
                        @Html.ActionLink("Delete", "SoftDelete", new { id = order.OrderId })
                    </td>
                </tr>
                //}
            }
        </table>
    </div>
</div>
