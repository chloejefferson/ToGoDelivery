@{
    ViewBag.Title = "Index";
}

<div class="jumbotron" style="background-color:white">
    <h2 style="font-weight:bolder">Menu</h2>
    <div>
        @Html.ActionLink("Create New Order", "Create", null, new { id = "myLink" })
    </div>

    @if (TempData.ContainsKey("SaveResult"))
    {
        <div class="alert alert-success fade in" role="alert">
            <button type="button" class="close" data-dismiss="alert">
                <span>&times;</span>
            </button>
            @TempData["SaveResult"]
        </div>
    }

    <table class="table table-hover">
        <tr>
            <th>
                Name
            </th>

            @*<th>
                    @Html.DisplayNameFor(model => model.Inventory)
                </th>*@
            <th>
                Cost
            </th>

            <th></th>
        </tr>
        @foreach (var product in ViewBag.Products)
        {
            if (product.IsActive)
            {
                <tr>
                    <td>
                        @product.Name
                    </td>
                    @*<td>
                            @Html.DisplayFor(r => product.Inventory)
                        </td>*@
                    <td>
                        @product.Cost.ToString("C")
                    </td>
                    <td>
                        @Html.ActionLink("Add to Cart", "Create", "OrderProduct", new {productId = product.ProductId }, null)
                    </td>
                </tr>
            }
        }
        @foreach (var service in ViewBag.Services)
        {
            if (service.IsActive)
            {
                <tr>
                    <td>
                        @service.Name
                    </td>
                    @*<td>
                            @Html.DisplayFor(r => product.Inventory)
                        </td>*@
                <td>
                    @service.Cost.ToString("C")
                </td>
                    <td>
                        @Html.ActionLink("Add to Cart", "Create", "OrderService", new { serviceId = service.ServiceId }, null)
                    </td>
                </tr>
            }
        }
    </table>
</div>
