@model IEnumerable<ToGoDelivery.Models.Service.ServiceListItem>
@{
    ViewBag.Title = "Index";
}

<h2>Services</h2>
<p>
    @Html.ActionLink("Create New Service", "Create")
</p>

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Cost)
        </th>

        <th></th>
    </tr>
    @foreach (var model in Model)
    {
        if (model.IsActive)
        {
            <tr>
                <td>
                    @Html.DisplayFor(r => model.Name)
                </td>
                <td>
                    @Html.DisplayFor(r => model.Cost)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = model.ServiceId}) |
                    @Html.ActionLink("Details", "Details", new { id = model.ServiceId }) |
                    @Html.ActionLink("Delete", "SoftDelete", new { id = model.ServiceId })
                </td>
            </tr>
        }
    }
</table>

